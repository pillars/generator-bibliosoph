.rest {
    border: 2px solid $rest_border

    .title {
        background: $rest_bg
        overflow: hidden
        position relative
        padding: h(.5)

        h3 {
            padding-right: 310px
        }

        .method {
            position: absolute
            top: h(.5)
            right: h()+200px
            width: 68px

            span {
                border-radius: 5px
                box-shadow: inset rgba(0, 0, 0, 0.3) 0 0 4px
                color: #FFF
                font-family: $f-mono
                font-size: 14px
                line-height: 20px
                text-transform: uppercase

                float: left
                padding: 0 4px

                &.get       { background: #090 }
                &.post      { background: #C90 }
                &.put       { background: #36F }
                &.delete    { background: #C30 }
            }
        }

        .url {
            display: block
            position: absolute
            top: h(.5)
            right: h()
            width: 200px
        }
    }
    
    .description {
        background: #FFF
        padding: h(.5)

        table {
            border-spacing: 0
            border-collapse: collapse
            width: 100%

            td, th {
                border-bottom: 1px solid $rest_bg
                line-height: h()
                height: h() - 1px
            }

            thead th {
                color: $rest_border
                font-weight: normal
            }

            tbody tr:last-child {
                td, th {
                    border-bottom: none
                }
            }

            th {
                text-align: left
            }
        }

        & + .title {
            border-top: 2px solid $rest_border
        }
    }

    &.narrow {
        .title {
            h3 {
                clear: both
                padding: 0
            }

            .method {
                top: auto
                right: h(.5)
                bottom: h(.5)

                span {
                    float: right
                }
            }

            .url {
                position: static
                margin-right: 68px
                width: auto
            }
        }
    }

    &.accordion {
        .title {
            cursor: pointer
        }
    }

}