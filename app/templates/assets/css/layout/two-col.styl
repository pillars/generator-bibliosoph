.two-col {
    .document-content {
        min-height: 100%
    }

    .document-wrap {
        background: $right_col_bg
        border-left: 1px solid $right_col_border
        box-shadow: #dadfe5 -1px 0 0,rgba(0,0,0,0.05) 1px 0 2px inset
        
        clearfix()
        margin-left: 50%
        min-height: 100%

        section {
            overflow: hidden
            margin-left: -100%

            section {
                float: left
                margin: 0
                width: 100%
            }
        }

        & > section + section {
            border-top: 1px solid $right_col_border
        }

        .full, .left, .right {
            box-sizing: border-box
            float: left
            padding: h(1.5)
            width: 50%
        }
        .full {
            clear: both
            width: 100%
        }
        .left, .right {
            max-width: 680px;
        }
        .left {
            clear: both
        }
        .right {
            // clear: right
            float: left
            padding-top: h(3.5)

            &.thin-padding {
                padding-top: h(2.5)
            }

            &.no-padding {
                padding-top: h(1.5)
            }

            h3 {
                color: $right_col_title
                font-family: $f-mono
                font-size: 14px
                letter-spacing: 1px
                text-transform: uppercase

                &+pre {
                    margin: 0
                }
            }
        }
    }
}
